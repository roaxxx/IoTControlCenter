<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingHorizontal="40dp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:id="@+id/alarmSettingsTitle"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Alarma de incendios"
            android:layout_marginBottom="20dp"
    />
    <TextView
            android:layout_width="match_parent"
            android:text="Temperatura de alerta"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_width="match_parent"
            android:hint="Ingrese la temperatura en Â°C"
            android:id="@+id/fireAlarmTemperature"
            android:inputType="number"
            android:background="@drawable/edittext_selector"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="match_parent"
            android:text="Estado de alarma:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:layout_height="wrap_content"/>
    <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/radioButtonGroup"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <RadioButton
                android:layout_width="wrap_content"
                android:text="Activa"
                android:textSize="16sp"
                android:id="@+id/activedRadioButton"
                android:textColor="@color/dark_blue"
                android:backgroundTint="@color/dark_blue"
                android:layout_height="wrap_content"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:text="Inactiva"
                android:textSize="16sp"
                android:id="@+id/desactivedRadioButton"
                android:textColor="@color/dark_blue"
                android:backgroundTint="@color/dark_blue"
                android:layout_height="wrap_content"/>
    </RadioGroup>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:id="@+id/cancelButton"
                app:cornerRadius="10dp"
                android:textSize="16sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginEnd="10dp"
                android:text="Cancelar"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_blue"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:id="@+id/applyButton"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:text="Aplicar"/>
    </LinearLayout>

</LinearLayout>